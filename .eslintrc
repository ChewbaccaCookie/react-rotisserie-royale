{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["plugin:prettier/recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"overrides": [
		{
			"files": "*",
			"rules": {
				"react/style-prop-object": "off"
			}
		}
	],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-console": "error"
	}
}
